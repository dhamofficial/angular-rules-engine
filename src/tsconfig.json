{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../src",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true,
    "listEmittedFiles": true
  },

  "files": [
    "main.ts",
    "typings.d.ts",
    "README.md",
    "license",
    "temp-package/package.json",
    "*.ts"
  ],
  "exclude": [
    "favicon.ico",
    "index.html",
    "index.js"
  ] 
}
